<h1>Books</h1>

<table>
	<thead>
		<tr>
		  <th></th>
		  <th>Title</th>
		  <th>Opinion</th>
		</tr>
	</thead>
	<tbody>
		 <% @books.each do |book| %>
		  <tr>
		  	<td></td>
		  	<td><%= book.title %></td>
		  	<td><%= book.body %></td>
		  </tr>
		 <% end %>
	</tbody>
</table>

<h1>New book</h1>

<%= form_for(@book) do |f| %>

 <h3>Title</h3>
 <%= f.text_field :title %>

 <h3>Opinion</h3>
 <%= f.text_area :body %><br>
 <%= f.submit 'Create Book' %>

<% end %>
