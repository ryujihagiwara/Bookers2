<h3>Editing Book</h3>

<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@book) do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Opinion</h4>
<%= f.text_area :body %><br>
<%= f.submit 'Update Book', class: "btn btn-primary btn-sm" %>

<% end %>

<p><%= link_to 'Show', book_path(@book.id) %>|
<%= link_to 'Back', books_path %></p>