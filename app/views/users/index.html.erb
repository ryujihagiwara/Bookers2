<div class="container">
 <div class="row">

  <div class="col-xs-3">

<% if flash[:notice] %>
    <div class="flash">
      <%= flash[:notice] %>
    </div>
    <% end %>


  <h1>User info</h1>

  <table class="table table-striped">
  <thead>
    <tr>
      <th><%= image_tag('no_image.jpg', class: "img-square pull-left profile-thumb", style: "width: 100px; height: 100px;") %>
      </th>
      <th></th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <td>name</td>
        <td><%= @user.name%></td>
      </tr>
      <tr>
        <td>introduction</td>
        <td><%= @user.introduction %></td>
      </tr>
  </tbody>
  </table>


  <% if @user == current_user %>
  <%= link_to edit_user_path(@user.id), class: "btn btn-default btn-block" do %>
   <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
     <% end %>
  <% end%>


  <h1>New book</h1>


  <%= form_for(@book) do |f| %>

  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  

  <h3>Title</h3>
  <%= f.text_field :title %>

  <h3>Opinion</h3>
  <%= f.text_area :body %><br>
  <%= f.submit 'Create Book' %>

  <% end %>
  </div>


  <div class="col-xs-9">
  <h1>Users</h1>

  <table class="table table-striped">
	<thead>
		<tr>
		  <th>image</th>
		  <th>name</th>
		  <th></th>
		</tr>
	</thead>
	<tbody>
		 <% @users.each do |user| %>
		  <tr>
		  	<td>
          <%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-square pull-left profile-img", fallback: "no_image.jpg", size: '60x60' %>
        </td>
		  	<td><%= user.name %></td>
		  	<td><%= link_to 'Show', user_path(user.id) %></td>
		  </tr>
		 <% end %>
	</tbody>
  </table>
  </div>


 </div>
</div>
