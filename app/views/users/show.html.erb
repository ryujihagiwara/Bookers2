<h1>User info</h1>
<div class="profile-container">
  <div class="row">
   <%= image_tag('sample-author2.jpg', class: "img-square pull-left profile-thumb", style: "width: 100px; height: 100px;") %>
  </div>

  <div class="row">
   <%= @user.name %>
  </div>

  <div class="row">
   <%= @user.introduction %>
  </div>
  <% if @user.id == current_user.id %>
  <%= link_to edit_user_path(@user), class: 'btn btn-default btn-block' do %>
   <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
  <% end%>
  <% end %>
 </div>
</div>