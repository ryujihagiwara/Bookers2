<% if flash[:notice] %>
    <div class="flash">
      <%= flash[:notice] %>
    </div>
    <% end %>

<h1>User info</h1>

<div class="row">
  <div class="col-lg-2">
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-square pull-left profile-img", fallback: "no_image.jpg" %>
      </th>
      <th></th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <td>name</td>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <td>introduction</td>
        <td><%= @user.introduction %></td>
      </tr>
  </tbody>
</table>

 <% if @user.id == current_user.id %>
  <%= link_to edit_user_path(@user), class: "btn btn-default btn-block" do %>
   <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
  <% end%>
  <% end %>
</div>
</div>

