<% if flash[:notice] %>
    <div class="flash">
      <%= flash[:notice] %>
    </div>
    <% end %>

<h1>User info</h1>

<div class="row">
  <div class="col-md-2">
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-square pull-left profile-img", fallback: "no_image.jpg" %>
      </th>
      <th></th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <td>name</td>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <td>introduction</td>
        <td><%= @user.introduction %></td>
      </tr>
  </tbody>
</table>

 <% if @user.id == current_user.id %>
  <%= link_to edit_user_path(@user), class: "btn btn-default btn-block" do %>
   <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
  <% end%>
  <% end %>

<h1>New book</h1>

  <% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

  <%= form_for(@book) do |f| %>

  <h3>Title</h3>
  <%= f.text_field :title %>

  <h3>Opinion</h3>
  <%= f.text_area :body %><br>
  <%= f.submit 'Create Book' %>

  <% end %>
  </div>

</div>
</div>

